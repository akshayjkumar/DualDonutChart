<resources>

    <!-- Custom attributes to support various DualDonutChart configurations and properties -->

    <declare-styleable name="DualDonutChart">
        <attr name="positiveValue" format="integer" />
        <attr name="negativeValue" format="integer" />
        <attr name="baseColor" format="color" />
        <attr name="positiveColor" format="color" />
        <attr name="positiveColorLight" format="color" />
        <attr name="negativeColor" format="color" />
        <attr name="negativeColorLight" format="color" />
        <attr name="textColor" format="color" />
        <attr name="title" format="string" />
        <attr name="animation" format="boolean" />
        <attr name="ltr" format="boolean" />
    </declare-styleable>


</resources>
